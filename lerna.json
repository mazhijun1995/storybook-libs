{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "registry": "http://localhost:4873/",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.ts",
        "**/*.stories.ts",
        "**/*.stories.tsx"
      ]
    }
  }
}
